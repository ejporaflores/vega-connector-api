{
  "name": "vega/connector-api",
  "description": "API connector for vega",
  "authors": [
    {
      "name": "Vega Dev Team",
      "email": "devteam@lyracons.com"
    }
  ],
  "require": {
    "illuminate/http": "^5.0|^6.0|^7.0|^8.0",
    "php": "^7.1",
    "vega/connector": "^1.0",
    "vega/connector-rest": "^1.0.4",
    "vega/core": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "Vega\\Connector\\Api\\": "src/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Vega\\Connector\\Api\\ApiServiceProvider"
      ]
    }
  },
  "repositories": {
    "packagist.org": false,
    "vega": {
      "type": "composer",
      "url": "https://repo.packagist.com/lyracons/vega-modules/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "squizlabs/php_codesniffer": "^3.6",
    "phpmd/phpmd": "^2.10",
    "mockery/mockery": "^1.3"
  },
  "scripts": {
    "test:standards": "phpcs",
    "test:mess": "phpmd src text phpmd.xml",
    "test:unit": "phpunit",
    "test:all": [
      "@test:standards",
      "@test:mess",
      "@test:unit"
    ]
  },
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "stable"
}
